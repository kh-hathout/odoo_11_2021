     <template id="mec_twitter_snippet" inherit_id="website.snippets" name="MEC Twitter snippet">
        <xpath expr="//div[@id='snippet_feature']//t[@t-snippet][last()]" position="after">
            <div>
                <div class="oe_snippet_thumbnail">
                    <img class="oe_snippet_thumbnail_img" src="/my_events_cloud_event_twitter/static/src/img/blocks/twitter_scroll.png"/>
                    <span class="oe_snippet_thumbnail_title">Event Twitter Scroller</span>
                </div>
                <section class="oe_snippet_body twitter" data-screen-name="OpenERP" data-limit="15">
                    <div class="twitter_timeline" contenteditable="false"></div>
                </section>
            </div>
        </xpath>
    </template>
    <template id="mec_twitter_options" inherit_id="website.snippet_options" name="Twitter Options">
        <xpath expr="//div" position="after">
            <div data-js='mec_twitter'
                data-selector=".mec_twitter"
                data-drop-in=".oe_structure, [data-oe-type=html]">
            </div>
        </xpath>
    </template>
    <template id="mec_twitter" inherit_id="website.assets_frontend" name="MEC Twitter Snippet">
        <xpath expr="/t" position="inside">
            <link rel="stylesheet" href="/my_events_cloud_event_twitter/static/src/css/website.twitter.css"  type="text/css"/>
            <script type="text/javascript" src="/my_events_cloud_event_twitter/static/src/js/website.twitter.animation.js"/>
        </xpath>
    </template>
    <template id="mec_twitter_editor" inherit_id="website.assets_editor" name="MEC Twitter options">
        <xpath expr="/t" position="inside">
            <script type="text/javascript" src="/my_events_cloud_event_twitter/static/src/js/website.twitter.editor.js"/>
        </xpath>
    </template>
</odoo>
