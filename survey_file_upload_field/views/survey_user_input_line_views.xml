<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="survey_user_input_line_attachment_field_form" model="ir.ui.view">
        <field name="name">survey_user_input_line_form</field>
        <field name="model">survey.user_input_line</field>
        <field name="inherit_id" ref="survey.survey_user_input_line_form"/>
        <field name="arch" type="xml">
            <field name="value_suggested" position="after">
                <field name="user_binary_line">
                    <tree>
                        <field name="binary_filename" invisible="1"/>
                        <field name="binary_data" widget="binary" filename="binary_filename"/>
                    </tree>
                </field>
            </field>
        </field>
   </record>
</odoo>